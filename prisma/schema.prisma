// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL") // uses connection pooling
  directUrl = env("DATABASE_URL_NON_POOLING") // used for migrations
}

model User {
  id        String   @id @default(cuid()) 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lastLogin DateTime @default(now())
  username  String   @unique 
  email     String   @unique
  password  String
  chef      Boolean  @default(false)
  role      Role     @default(cook)
  firstName String
  lastName  String 
  recipes   Recipe[] 
  menus     Menu[]
  assignedLists PrepList[] @relation("Assigned List")
  prepLists PrepList[]
  prepListsTemplate PrepListTemplate[]
  teams Team[]
  feedMessages FeedMessage[]
  orgOwner Boolean @default(false)
  approved  Boolean  @default(false)
  stickyNotes StickyNote[]
  colorVariant Int @default(0)
}

enum Role {
cook
sousChef
headChef
}
model Team { 
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String
  city        String
  state       String
  members     User[]
  recipes     Recipe[]
  menus       Menu[]
  prepLists   PrepList[]
  feedMessages FeedMessage[]
  prepListsTemplate PrepListTemplate[]
  stickyNotes StickyNote[]
}
model Recipe {
  id          String   @id @default(cuid())
  images      String[]
  dish        Boolean  @default(false)
  section     MenuSection[]
  menu        Menu[] 
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String
  category    String
  allergens   String[]
  yieldAmt    String 
  yieldUnit   String   
  ingredients Ingredient[]
  feedMessages FeedMessage[]
  steps       String[]
  Notes       String[]
  author      User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId    String 
  linkedIngredients Ingredient[] @relation("Linked Recipes")
  taskGroups  taskGroup[]
  tasks       tasks[]
  teams  Team[]

}

model StickyNote {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  content        String
  author      User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId    String
  tasks       StickyNoteTask[]
  color      String
  team  Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
  teamId String


}

model StickyNoteTask {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  content     String
  completed   Boolean @default(false)
  stickyNote  StickyNote @relation(fields: [stickyNoteId], references: [id], onDelete: Cascade)
  stickyNoteId String
}
model Ingredient {
  id          String   @id @default(cuid())
  recipe      Recipe   @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  recipeId    String
  ingredient  String
  qty         String
  unit        String
  linkRecipe  Recipe?  @relation(fields: [linkId], references: [id], "Linked Recipes", onDelete: SetNull) 
  linkId      String?  
}

model Menu {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String
  service     String
  feedMessages FeedMessage[]
  sections    MenuSection[]
  dishes      Recipe[]
  author      User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId    String  
  teams  Team[]
}
 
model MenuSection {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String
  menu        Menu    @relation(fields: [menuId], references: [id], onDelete: Cascade) 
  menuId      String
  dishes      Recipe[]
}

model PrepList {
  id          String   @id @default(cuid())
  name        String
  date        DateTime
  author      User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId    String 
  assignedTo User?     @relation(fields: [assignedToId], references: [id], "Assigned List", onDelete: SetNull)
  assignedToId String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  taskGroups  taskGroup[]
  team  Team? @relation(fields: [teamId], references: [id], onDelete: SetNull)
  teamId String?
}
model taskGroup {
  id          String   @id @default(cuid())
  name        String 
  prepList    PrepList? @relation(fields: [prepListId], references: [id], onDelete: Cascade)
  prepListId  String?
  linkRecipe  Recipe?  @relation(fields: [linkRecipeId], references: [id],  onDelete: SetNull) 
  linkRecipeId String? 
  tasks       tasks[]
  template    PrepListTemplate? @relation(fields: [templateId], references: [id], onDelete: Cascade)
  templateId String?
}

model tasks {
  id          String   @id @default(cuid())
  name        String
  taskGroup   taskGroup @relation(fields: [taskGroupId], references: [id], onDelete: Cascade)
  taskGroupId String
  completed   Boolean @default(false)
  onHand      String?  
  prepQty     String?
  prepUnit    String?
  linkRecipe  Recipe?  @relation(fields: [linkRecipeId], references: [id],  onDelete: SetNull) 
  linkRecipeId String? 
}

model PrepListTemplate {
  id    String  @id @default(cuid())
  name  String
  taskGroups  taskGroup[]
  author      User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
teams  Team[] 
}

model FeedMessage { 
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  content     String
  linkRecipe Recipe?  @relation(fields: [linkRecipeId], references: [id],  onDelete: SetNull)
  linkRecipeId String?
  linkMenu Menu?  @relation(fields: [linkMenuId], references: [id],  onDelete: SetNull)
  linkMenuId String?
  author      User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId    String
  teams  Team[] 
}
